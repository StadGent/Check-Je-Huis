                <td>{{ buildingTypes[measurement.type] }}</td>
                <td>{{ buildingSizes[measurement.size] }}</td>
                <td class="left value"
                    data-url="{{ path('admin_surfaces_update', { id: measurement.id }) }}">{{ measurement.livingArea }}</td>
