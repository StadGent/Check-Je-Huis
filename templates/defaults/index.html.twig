                    {% endfor %}
                </select>
            </th>
            <th>&nbsp;</th>
        </tr>
        {% for measurement in defaultsRoof %}
            <tr>
                <td>{{ buildingTypes[measurement.type] }}</td>
                <td>{{ buildingSizes[measurement.size] }}</td>
                <td>{{ measurement.getInclinationString }}</td>
                <td class="left value"
