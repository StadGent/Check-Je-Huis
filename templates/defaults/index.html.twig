                <td class="left value"
                    data-url="{{ path('admin_surfaces_update', { id: measurement.id }) }}">{{ measurement.facade }}</td>
                <td class="left value"
                    data-url="{{ path('admin_surfaces_update', { id: measurement.id }) }}">{{ measurement.window }}</td>
            </tr>
        {% endfor %}
    </table>

